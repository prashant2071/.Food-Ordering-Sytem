@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_HomeLayoutPage.cshtml";
}
<style>
    .words{
        color:white;
    }
</style>
<div class="banner-top">
    <div class="container">
        <h3>Register</h3>
        <div class="words">
            <p>Make sure that you write correct email address because if you forget password we can help you find  your password</p>
        </div>
        <h4><a href="index.html">Home</a><label>/</label>Register</h4>
        <div class="clearfix"> </div>
    </div>
</div>

<!--login-->

<div class="login">
    <div class="main-agileits">
        <div class="form-w3agile form1">
            <h3>Register</h3>
            @*<p>Make sure that you write correct email address because if you forget password we can help you find  your password</p>*@
            <form action="#" method="post">
                <div class="key">
                    <i class="fa fa-user" aria-hidden="true"></i>
                    @*<input type="text" value="Username" name="Username" id="username" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Username';}" required="">*@
                    <input type="text" id="username" class="form-control" , onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" Username" Required="required">

                    <div class="clearfix"></div>
                </div>
                <div id="username1"></div>
                <div class="key">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    <input type="text" class="form-control" id="phone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" Phone Number" required="">
                    <div class="clearfix"></div>
                </div>
                <div id="phone1"></div>
                <div class="key">
                    <i class="fa fa-phone" aria-hidden="true"></i>
                    <input type="text" class="form-control" id="additionalphone" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder="  Additional Phone Number" required="">
                    <div class="clearfix"></div>
                </div>

                <div class="key">
                    <i class="fa fa-home" aria-hidden="true"></i>
                    <input type="text" class="form-control" id="address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" Address" required="">
                    <div class="clearfix"></div>
                </div>
                <div id="address1"></div>
                <div class="key">
                    <i class="fa fa-envelope" aria-hidden="true"></i>
                    <input type="text" class="form-control" id="email" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" Email" required="">
                    <div class="clearfix"></div>
                </div>
                <div id="email1"></div>

                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" class="form-control" id="pwd" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" *******" required="">
                    <div class="clearfix"></div>
                </div>
                <div id="pwd1"></div>

                <div class="key">
                    <i class="fa fa-lock" aria-hidden="true"></i>
                    <input type="password" class="form-control" id="cpwd" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = '';}" placeHolder=" *******" required="">
                    <div class="clearfix"></div>

                </div>
                <div id="cpwd1"></div>
                <div id="showerrorpwd"></div>

                @*<input type="submit" value="Submit">*@
                <button type="button" id="btnRegister" onclick="return Register();" class="btn btn-danger my-cart-btn my-cart-btn1">Register</button>


            </form>
        </div>

    </div>
</div>

<script>
    $(document).ready(function () {
        $('#cpwd').keyup(function () {

            var pwd = $('#pwd').val();
            var cpwd = $('#cpwd').val();
            if (cpwd != pwd) {
                $('#showerrorpwd').html('! Password are not matching');
                $('#showerrorpwd').css('color', 'blue');
                return false;
            }
            else {
                $('#showerrorpwd').html('');
                return true;

            }

        });
        
    });

</script>